<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="dataPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.bizstudio.security.util.CredentialConverter</class>
        <class>com.bizstudio.security.entities.CredentialEntity</class>
        <class>com.bizstudio.security.entities.PrincipalEntity</class>
        <class>com.bizstudio.security.entities.UserAccountEntity</class>
        <class>com.bizstudio.security.entities.UserPermissionEntity</class>
        <class>com.bizstudio.security.entities.UserRoleEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:file:./data/open_pos.db;MVCC=true"/>
            <property name="javax.persistence.jdbc.user" value="admin"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="eclipselink.logging.level" value="FINEST"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="cachePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.bizstudio.security.entities.SessionEntity</class>
        <class>com.bizstudio.security.util.SessionAttributesConverter</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/open_pos_cache;MVCC=true"/>
            <property name="javax.persistence.jdbc.user" value="admin"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
